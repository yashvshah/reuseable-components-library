{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2016"],
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "declaration": true,
      "outDir": "./dist",
      "noImplicitAny": false
    },
    "include": ["components/**/*", "index.ts"],
    "exclude": ["node_modules", "dist"]
  }
  